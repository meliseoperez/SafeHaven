<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".api.comments.UDCommentActivity">

    <!-- CardView para TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewComent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/idComent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="Comentario único" />
    </androidx.cardview.widget.CardView>

    <!-- CardView para EditText -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEditarComent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewComent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/etnuevoComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:hint="Actualizar comentario"
            android:textSize="18sp"
            android:gravity="center_vertical"/>
    </androidx.cardview.widget.CardView>

    <!-- Botón Modificar -->
    <Button
        android:id="@+id/btnModificarComentario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Modificar"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnElinarComentario"
        app:layout_constraintTop_toBottomOf="@id/cardViewEditarComent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"/>

    <!-- Botón Eliminar -->
    <Button
        android:id="@+id/btnElinarComentario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Eliminar"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        app:layout_constraintStart_toEndOf="@+id/btnModificarComentario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewEditarComent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
