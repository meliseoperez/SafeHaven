<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FF"
    android:padding="16dp"
    tools:context=".api.comments.UDCommentActivity">

    <!-- TextView para mostrar el comentario existente -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewComent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/idComent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Comentario único"
            android:textSize="18sp"
            android:gravity="center_vertical" />
    </androidx.cardview.widget.CardView>

    <!-- EditText para editar el comentario, con dimensiones aumentadas -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEditarComent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewComent"
        app:layout_constraintBottom_toTopOf="@+id/btnModificarComentario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etnuevoComentario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:hint="Actualizar comentario"
            android:textSize="18sp"
            android:inputType="textMultiLine"
            android:gravity="top|start"/>
    </androidx.cardview.widget.CardView>

    <!-- Botón para modificar el comentario, ajustado para posicionamiento -->
    <Button
        android:id="@+id/btnModificarComentario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/cardViewEditarComent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnElinarComentario"
        app:layout_constraintHorizontal_weight="1"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"/>

    <!-- Botón para eliminar el comentario, ajustado para posicionamiento -->
    <Button
        android:id="@+id/btnElinarComentario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/cardViewEditarComent"
        app:layout_constraintStart_toEndOf="@+id/btnModificarComentario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
